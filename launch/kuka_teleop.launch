<?xml version="1.0"?>

  <!-- ======================================================== -->
  <!-- |    Launch file to start IIWA teleoperation nodes     | -->
  <!-- ======================================================== -->

<launch>
  <param name="iiwa/toolName" value="needle" />

  <node pkg="chai3d_ros" type="chai3d_ros_node" name="chai3d_ros_node" />
  <node pkg="robotiq_ft_sensor" type="rq_sensor" name="rq_sensor" />
  <node pkg="arduino_instrument" type="arduino_instrument_node" name="arduino_instrument_node" />
  <node pkg="force_haptic" type="force_haptic_node" name="force_haptic_node" />
  <node pkg="robot_haptic" type="robot_haptic_node" name="robot_haptic_node" />
  <node pkg="spacenav_node" type="spacenav_node" name="spacenav_node" />
  
  <node pkg="rosserial_python" type="serial_node" name="serial_node" >
    <param name="~port" value="/dev/ttyUSB0"/>
  </node>

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video1" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
  </node>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>

</launch>
